<div class="row">
  <div class="col s8">
    <div class="card">
      <div class="card-image waves-effect waves-block waves-light">
        <%= image_tag @ticket.appropriate_photo, class: "activator" %>
      </div>
      <div class="card-content">
        <span class="card-title activator grey-text text-darken-4">Ticket: <%= @ticket.event.card_title %><i class="material-icons right">more_vert</i></span>
        <p>
          <%= link_to "click here to buy more tickets to the event!", event_path(@ticket.event.venue.slug, @ticket.event.id) %>
        </p>
      </div>
      <div class="card-reveal valign-wrapper">
        <span class="card-title grey-text text-darken-4 center-align"> <h4>
        <i class="material-icons right">close</i><%= @ticket.event.title %></h4></span>
        <p>
          <hr>
          <table class="centered">
            <thead>
              <tr data-type="ticket_info">
                <h5 class="center-align"><em>Enjoy the <%= @ticket.event.type %>! </em></h5>
              </tr>
            </thead>
            <tbody>
                <tr>
                  <td><h5>This Event is Occurring on: <%= @ticket.event.date_string %> </h5></td>
                </tr>
                <tr>
                  <td><h5>The Venue is Located at: <%= @ticket.event.venue.address %> </h5></td>
                </tr>
                <tr>
                  <td><h5><%= link_to "Click Here to View a Map of the Venue Location", event_path(@ticket.event.venue.slug, @ticket.event.id) %></h5></td>
                </tr>
                <tr>
                  <td><h5>Your seat is: <strong><%= @ticket.seat_location %></h5> </strong></td>
                </tr>
            </tbody>
          </table>
        </p>
      </div>
    </div>
  </div>
</div>
