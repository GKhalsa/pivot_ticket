<h4 class="admin-tickets">All Tickets</h4>
<div class="center">
  <%= link_to "Create a New Ticket",
              new_admin_ticket_path,
              class: "waves-effect waves-light btn" %>
</div>
<table class="highlight">
    <tr>
      <th>id</th>
      <th>Title</th>
      <th>Price</th>
      <th>Updated at</th>
      <th></th>
      <th></th>
    </tr>
    <% @tickets.each do |ticket|%>
    <tr>
      <td><%= ticket.id %></td>
      <td><%= ticket.event_title %></td>
      <td><%= ticket.price %></td>
      <td><%= ticket.updated_at %></td>
      <td><%= link_to "Edit Ticket", edit_admin_ticket_path(ticket), class: "waves-effect waves-light btn" %></td>
      <td>  <% if ticket.active? %>
             <%= button_to "de-activate ticket", admin_ticket_deactivate_path(ticket.id), class: "waves-effect waves-light red lighten-1 btn" %>
            <% elsif ticket.inactive? %>
             <%= button_to "activate ticket", admin_ticket_activate_path(ticket.id), class: "waves-effect waves-light btn" %>
            <% else %>
             <%= button_to "ticket is expired", "#", class: "btn disabled" %>
            <% end %>
      </td>
    </tr>
  <% end %>
</table>
