<h4 class="admin-tickets">All Events</h4>
<div class="center">
  <%= link_to "Create a New Event",
              new_admin_ticket_path,
              class: "waves-effect waves-light btn" %>
</div>
<table class="highlight">
    <tr>
      <th>id</th>
      <th>Title</th>
      <th>Price</th>
      <th>Updated at</th>
      <th></th>
      <th></th>
    </tr>
    <% @tickets.each do |ticket|%>
    <tr>
      <td><%= ticket.id %></td>
      <td><%= ticket.event_title %></td>
      <td><%= ticket.price %></td>
      <td><%= ticket.updated_at %></td>
      <td><%= link_to "Edit Event", edit_admin_ticket_path(ticket), class: "waves-effect waves-light btn" %></td>
      <td><%= button_to_change_ticket_state(ticket) %></td>
    </tr>
  <% end %>
</table>
