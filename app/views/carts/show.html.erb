<div class="row">
  <div class="col sm12 m8 l6">
    <ul class="collection">
      <% @cart.all_tickets.each do |ticket| %>
        <li class="collection-ticket avatar">
          <%= image_tag(ticket.avatar.url, class: "circle") %>
          <span class="title"><%= ticket.event_title %></span>
          <p><%= ticket.event_performing %> at <%= ticket.venue_name %></p>

            <%= form_tag cart_path, method: :patch do %>
              <%= hidden_field_tag(:ticket_id, ticket.id) %>
              <%= number_field_tag(:quantity, ticket.quantity, min: 1, class: "right right-align") %>
              <%= submit_tag("Update", class: "right btn") %>
            <% end %>


          <%= link_to "Delete", cart_path(ticket_id: ticket.id), method: :delete, class: "btn" %>
          <span class="secondary-content right"><%= ticket.price %></span><br>
        </li>
      <% end %>
      <li class="right collection-ticket">Total: <%= @cart.total %></li>
    </ul>
    <%= checkout_or_create_account_button %>
  </div>
</div>
